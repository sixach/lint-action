{
	"name": "wpscripts-lint-action",
	"version": "1.0.0",
	"description": "GitHub Action for detecting and fixing WordPress linting errors",
	"author": {
		"name": "Sixa",
		"email": "info@sixa.ch",
		"url": "https://sixa.ch/"
	},
	"repository": "github:sixach/wpscripts-lint-action",
	"license": "MIT",
	"private": true,
	"main": "./dist/index.js",
	"scripts": {
		"test": "jest",
		"lint": "eslint --max-warnings 0 \"**/*.js\"",
		"lint:fix": "yarn lint --fix",
		"format": "prettier --list-different \"**/*.{css,html,js,json,jsx,less,md,scss,ts,tsx,vue,yaml,yml}\"",
		"format:fix": "yarn format --write",
		"build": "ncc build ./src/index.js"
	},
	"dependencies": {
		"@actions/core": "^1.6.0",
		"chalk": "^4.1.2",
		"command-exists": "^1.2.9",
		"parse-diff": "^0.8.1"
	},
	"devDependencies": {
		"@vercel/ncc": "^0.33.0",
		"eslint": "7.32.0",
		"eslint-config-airbnb-base": "15.0.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "^2.25.3",
		"eslint-plugin-jsdoc": "^37.2.0",
		"fs-extra": "^10.0.0",
		"jest": "^27.4.3",
		"prettier": "^2.5.1"
	}
}
